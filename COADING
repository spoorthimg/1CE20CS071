/*Write a program to REVERSE the number?*/

#include<iostream.h>
using namespace std;
int main()
{
   int number,reminder,reverse=0;
   cout<<"Please enter the number that you want to reverse:";
   cin>>number;
   while(number>0)
   {
      reminder=number%10;
      reverse=reverse*10+reminder;
      number=number/10;
   }
   cout<<"\n Reverse of given number:"<<reverse<<endl;
   return 0;
}



/*Write a program to convert BINARY to DECIMAL?*/

#include<iostream.h>
using namespace std;
int main()
{
   int num,rem,temp,dec=0,b=1;
   cout<<"Enter the binary number:";
   cin>>num;
   temp=num;
   while(num>0)
   {
      rem=temp%10;
      dec=dec+rem*b;
      b*=2;
      temp/=10;
   }
   cout<<"The decimal equivalent of"<<num<<"is"<<dec;
   return 0;
   }
